<Window x:Class="file_manager_test_app.Windows.CopyMoveConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Commander" Height="150" Width="400" ResizeMode="NoResize"
        ShowInTaskbar="False" WindowStartupLocation="CenterScreen">
    
    <Grid>
        <StackPanel Margin="10,5">
            <Label Content="Label" Margin="0,5,0,0" Padding="5" x:Name="Label"/>

            <TextBox Height="23" TextWrapping="Wrap" Text="TextBox" Margin="0,5" x:Name="TextBox"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Button Content="OK" Margin="0,0,10,0" MinWidth="80" x:Name="OKButton" />
                <Button Content="Cancel" Margin="0,0,10,0" MinWidth="80" x:Name="CancelButton" />
            </StackPanel>
            
        </StackPanel>
        
    </Grid>
</Window>
